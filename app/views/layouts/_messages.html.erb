<!-- Error messages partial -->

<!-- key refers to the class of the alert box which was hard coded in the controller (true = 'success', false = 'alert') -->
<% flash.each do |key, value| %>
	<div data-alert class="alert-box <%= key %>" role="alert">

		<!-- Value refers to the actual error message generated by Rails -->
		<%= value %>
		<a href="#" class="close">&times;</a>
	</div>
<% end %>