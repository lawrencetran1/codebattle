<nav class="top-bar" data-topbar role="navigation">
  <ul class="title-area">
    <li class="name">
      <h1><%= link_to "", root_path, class: "fi-home" %></h1>
    </li>
  </ul>

  <section class="top-bar-section">
    <!-- Right Nav Section -->
    <ul class="right">
         <% if current_user %>

          <li class="has-dropdown">
            <a href="#"><%= current_user.username %></a>
              <ul class="dropdown">
                <li><%= link_to "View profile", user_path(current_user) %></li>
                <li><%= link_to "Logout", logout_path %></li>
              </ul>
          </li>          
         <% end %>

      <% if !current_user %>
        <li><%= link_to "Login", '/login', class: "button success" %></li>
        <li class="has-form"><%= link_to "Sign Up", signup_path, class: "button alert" %></li>
      <% end %>

    </ul>

  </section>
</nav>

