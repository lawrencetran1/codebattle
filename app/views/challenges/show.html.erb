<div class="row">
        <div class="large-12 columns">

            <div class="row">
              <p>Your answer: <%= @solution %>, Correct answer: <%= @challenge.answer %>, Result: <%= @result %></p>
              <div class="large-6 columns">
     
                <h3 class="show-for-small"><%= @challenge.name %><hr/></h3>
     
                <div class="panel">
                  <h4 class="hide-for-small"><%= @challenge.name %><hr/></h4>
                  <textarea class="ccarea" disabled><%= @challenge.instructions %></textarea>
                </div>
     
              </div>
              
              <div class="large-6 columns">
     
                <h3 class="show-for-small">Your solution<hr/></h3>
     
                <div class="panel">
                  <h4 class="hide-for-small">Your solution<hr/></h4>
                  <%#= form_tag({controller: "challenges", action: "check_solution"}, method: "get") do %>
                  <%= form_tag("/challenges/#{params[:id]}", method: :get) do %>
                  <%= text_area_tag :solution, nil, class: "ccarea" %>
                </div>
     
              </div>    
     
              <div class="large-6 columns">
     
                <h3 class="show-for-small">Starter Code<hr/></h3>
     
                <div class="panel">
                  <h4 class="hide-for-small">Starter Code<hr/></h4>
                  <textarea class="ccarea" disabled><%= @challenge.starter %></textarea>
                </div>
     
              </div>

              <div class="large-6 columns">
     
                <h3 class="show-for-small">Documentation<hr/></h3>
     
                <div class="panel">
                  <h4 class="hide-for-small">Documentation<hr/></h4>
                  <textarea class="ccarea"><%= @challenge.documentation %></textarea>
                </div>
     
              </div>              
     
            </div>

            <%= submit_tag "Submit", class: "button success expand" %>  
            <% end %>
     
        </div>
      </div>