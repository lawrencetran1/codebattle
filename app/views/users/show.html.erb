     
<div class="row">

  <div class="large-4 small-12 columns">

    <div class="hide-for-small panel">
      <h3>Welcome <%= current_user.username %>!</h3>
      <div class="section-container vertical-nav" data-section data-options="deep_linking: false; one_up: true">
        <ul class="stack button-group">
          <li><%= link_to "Create challenge", new_challenge_path, class: "button" %></li>
          <li><%= link_to "Challenge someone", current_user, class: "button" %></li>
          <li><%= link_to "Edit profile", current_user, class: "button" %></li>
        </ul>                

      </div>
    </div>

    <a href="#">
    <div class="panel callout radius">      
      <% if current_user.challenges.count == 1 %>
        <h6>You have <%= current_user.challenges.count %> code challenge</h6>
      <% else %>
        <h6>You have <%= current_user.challenges.count %> code challenges</h6>
      <% end %>
    </div>
    </a>

  </div>

  <div class="large-8 columns">
    <div class="row">
      <% current_user.challenges.each do |challenge| %>
      <div class="large-4 small-6 columns">
        <img src="http://placehold.it/1000x1000&text=Thumbnail">

        <div class="panel">
          <h5><%= challenge.name %></h5>
          <h6 class="subheader"><%= challenge.category %></h6>
        </div>
      </div>
      <% end %>

    </div>


  </div>

</div>
     
     
         
     
